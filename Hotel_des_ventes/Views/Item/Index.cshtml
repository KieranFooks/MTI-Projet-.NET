@model Hotel_des_ventes.Models.ItemOfferModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Alert if Viewbag.Error is not empty*@
@if (ViewBag != null && ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@using(Html.BeginForm("Buy", "Item", FormMethod.Post))
{
    <h1>@Html.DisplayFor(Model => Model.Name)</h1>
    <div style="margin-top: 50px; margin-bottom: 50px">
        <ul>
            <li>Quantity: @Html.DisplayFor(Model => Model.Quantity)</li>
            <li>Price: @Html.DisplayFor(Model => Model.Price)</li>
            <li>Seller: @Html.DisplayFor(Model => Model.Seller)</li>
        </ul>
    </div>

    <input type="hidden" name="itemId" value="@Model.Id" />
    
    <input class="btn btn-primary" type="submit" value="Buy"/>
}